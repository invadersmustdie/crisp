grammar Crisp

  rule operation
    space paren_start space func_identifier list:(space parameter)+ space paren_end space <Operation>
  end

  rule parameter
    operation / float / number
  end

  rule func_identifier
    [a-z]+
    /
    '+'
    /
    '-'
    /
    '*'
    /
    '/'
  end

  rule number
    '-'? ([1-9] [0-9]* / '0') <Number>
  end

  rule float
    number '.' [0-9]* <Float>
  end

  rule space
    [ \t\r\n]*
  end

  rule paren_start
    "("
  end

  rule paren_end
    ")"
  end

end
