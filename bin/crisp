#!/usr/bin/env ruby

require 'lib/crisp'

runtime = Crisp::Runtime.new

if ARGV.size == 0
  buffer = ''

  loop do
    print ">> " if buffer.empty?
    buffer << gets

    if runtime.parse(buffer)
      runtime.run(buffer)
      puts "=> " + runtime.last_return.to_s
      buffer = ''
    else
      print "?> "
    end
  end
elsif ARGV.size == 1
  runtime.run(File.read(ARGV.first))
else
  puts "to many args"
end
